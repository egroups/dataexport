object TexExporter
  Description = 'Orders data exportt'
  Sessions = <  
    item
      Name = 'invoices'
      provider = 'invoices-provider'      
      Columns = <
        item
          Name = 'id'
          Expression = 'Result := GetId;'         
        end       
        item
          Name = 'type'
          Dictionary = 'type'          
        end
        item
          Name = 'number'                        
        end
        item
          Name = 'created_at'
          Expression = 'Result := FormatDateTime(''yyyy-mm-dd'', Value);'         
        end        
        item
          Name = 'description'          
        end> 
      Sessions = <
        item
          Name = 'details'
          provider = 'details-provider'
          Columns = < 
            item
              Name = 'id'
              Expression = 'Result := GetId;'         
            end           
            item
              Name = 'type'
              Expression = 'Result := 200;'
            end
            item
              Name = 'product_id'              
            end
            item
              Name = 'quantity'              
            end
            item
              Name = 'price'              
            end
            item
              Alias = 'value' 
              Name = 'total'              
            end>
          Sessions = <>
        end
        item
          Name = 'person'
          provider = 'invoices-provider'
          Columns = <      
            item
              Name = 'firstName'              
            end
            item
              Name = 'lastName'              
            end>            
        end>      
    end>
  Dictionaries = <      
    item
      Name = 'type'            
      Expression = 'Result := 100;'      
    end>  
  Packages = <    
    item
      Name = 'invoices'
      Sessions.Strings = (
        'invoices'          
      )
    end
    item
      Name = 'persons'
      Sessions.Strings = (
        'persons'          
      )
    end> 
  Providers = <
    item
      Name = 'invoices-provider'
      SQL.Strings = (
	      'select invoices.*, '
        'persons.firstName, '
        'persons.lastName '
        'from invoices '
        'join persons on (persons.id = invoices.person_id)'
	    )
    end
    item
      Name = 'details-provider'
      SQL.Strings = (
	      'select * from invoice_details where invoice_id = :id'
	    )
    end
    item
      Name = 'persons-provider'
      SQL.Strings = (
	      'select * from persons'
	    )
    end> 
end